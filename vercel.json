{ 
  "version": 2,
  "builds": [
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "headers": [
    {
      "source": "/dist/assets/.*\\.(png|jpg|jpeg|gif)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/$1"
        }
      ]
    },
    {
      "source": "/dist/assets/.*\\.mp3",
      "headers": [
        {
          "key": "Content-Type",
          "value": "audio/mpeg"
        }
      ]
    }
  ]
}
